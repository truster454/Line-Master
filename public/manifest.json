{
  "manifest_version": 3,
  "name": "Line Master",
  "version": "1.0.0",
  "description": "Chess opening theory helper.",
  "action": {
    "default_title": "Line Master",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon.png",
      "32": "images/icon.png",
      "48": "images/icon.png",
      "128": "images/icon.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://www.chess.com/*", "https://lichess.org/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["books/*.bin", "books/*/*.bin", "images/star.png"],
      "matches": ["https://www.chess.com/*", "https://lichess.org/*"]
    }
  ],
  "permissions": ["storage"],
  "host_permissions": ["https://www.chess.com/*", "https://lichess.org/*"],
  "icons": {
    "16": "images/icon.png",
    "32": "images/icon.png",
    "48": "images/icon.png",
    "128": "images/icon.png"
  }
}
